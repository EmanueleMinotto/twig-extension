{
    "name": "puli/twig-extension",
    "description": "A Puli extension for the Twig templating system.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "puli/repository": "~1.0",
        "twig/twig": "~1.0",
        "webmozart/path-util": "~1.0"
    },
    "require-dev": {
        "puli/web-resource-plugin": "~1.0",
        "symfony/http-kernel": "~2.3"
    },
    "minimum-stability": "dev",
    "suggest": {
        "puli/web-resource-plugin": "Enables the resource() function"
    },
    "autoload": {
        "psr-4": {
            "Puli\\Extension\\Twig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\Extension\\Twig\\Tests\\": "tests/",
            "Puli\\Repository\\Tests\\": "vendor/puli/repository/tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/puli/issues/issues"
    }
}
